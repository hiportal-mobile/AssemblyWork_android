<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_layout_bg"
    android:background="@drawable/bg_popup"
    android:layout_width="513dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="@string/s_btn_dtl_search"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" 
        android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line_box"
            android:layout_marginBottom="-1dp"  >

            <TextView
                android:id="@+id/tv_aw_10_sdate_title"
                style="@style/style_aw_11_title"
                android:layout_width="163dp"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:text="@string/s_lb_search_sdate" />

            <EditText
                android:id="@+id/et_aw_10_sdate"
                android:layout_width="0dp"
                android:layout_height="44dp"
                style="@style/style_input_text"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_inputbar_s2"
               	android:focusable="false" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line_box"
            android:layout_marginBottom="-1dp"
            android:gravity="center_vertical"  >

            <TextView
                android:id="@+id/tv_aw_10_edate_title"
                style="@style/style_aw_11_title"
                android:layout_width="163dp"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:text="@string/s_lb_search_edate" />

            <EditText
                android:id="@+id/et_aw_10_edate"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/style_input_text"
                android:layout_height="44dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_inputbar_s2"
                android:focusable="false" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:background="@drawable/line_box"
			android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_aw_10_part_title"
                style="@style/style_aw_11_title"
                android:layout_width="163dp"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:text="@string/s_lb_part" />

            <Spinner
                android:id="@+id/sp_aw_10_part"
                android:layout_width="fill_parent"
                style="@style/style_input_text"
                android:layout_height="44dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_selbar_s1"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       	android:gravity="center_horizontal|center_vertical"
       	android:layout_marginTop="20dip"
       	android:layout_marginBottom="20dip" >

        <Button
            android:id="@+id/btn_aw_10_cancel"
            style="@style/style_button_text"
            android:layout_width="138dp"
                android:layout_height="54dp"
                android:background="@drawable/selector_btn_aw_large_7_patch"
                android:text="@string/s_btn_cancel"/>

        <Button
            android:id="@+id/btn_aw_10_search"
            style="@style/style_button_text"
           android:layout_width="138dp"
                android:layout_height="54dp"
                android:background="@drawable/selector_btn_aw_large_7_patch"
            android:layout_marginLeft="15dp" 
            android:text="@string/s_btn_search" />
    </LinearLayout>

</LinearLayout>