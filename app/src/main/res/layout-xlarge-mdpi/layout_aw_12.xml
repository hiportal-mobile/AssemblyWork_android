<!--
	화면명: 의원요청등록 > 제목팝업
	작성자: 방종희
	DESC: 
	DATE: 2013.04.15
	VERSION: 0.1
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="553dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        style="@style/style_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_popup"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="@string/s_lb_add_request_content"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="511dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/line_box" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_aw_12_title_txt"
                    style="@style/style_aw_12_title"
                    android:layout_width="127dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="@string/s_lb_title" />

                <EditText
                    android:id="@+id/et_aw_12_title"
                    android:layout_width="0dip"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    style="@style/style_input_text"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_inputbar_s2"
                    android:hint="@string/s_unknown" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_aw_12_request_title"
                    style="@style/style_aw_12_title"
                    android:layout_width="127dp"
                    android:layout_height="99dp"
                    android:gravity="center_vertical"
                    android:text="@string/s_lb_reqcontent" />

                <EditText
                    android:id="@+id/et_aw_12_request"
                    android:layout_width="fill_parent"
                    android:layout_height="89dp"
                    style="@style/style_input_text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_inputbar_s2"
                    android:hint="@string/s_unknown" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <!-- 담당자 -->

                <TextView
                    android:id="@+id/tv_aw_12_mbr_title"
                    style="@style/style_aw_12_title"
                    android:layout_width="127dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="@string/s_lb_admname" />

                <EditText
                    android:id="@+id/et_aw_12_mbr"
                    android:layout_width="250dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    style="@style/style_input_text"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_inputbar_s2"
                    android:hint="@string/s_unknown" />

                <!-- 검색 btn -->

                <Button
                    android:id="@+id/btn_aw_12_search"
                    style="@style/style_button_text"
                    android:layout_width="98dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_btn_aw_large_9_patch"
                    android:contentDescription="@string/s_btn_search"
                    android:text="@string/s_btn_search" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <!-- 자체질문여부 -->

            <CheckBox
                android:id="@+id/ck_aw_12_self_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:button="@drawable/selector_chk_checkbtn"
                android:textColor="@color/darkgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:text="@string/s_lb_reqself"
                android:textColor="#333333"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical|center_horizontal" >

            <!-- 취소 -->

            <Button
                android:id="@+id/btn_aw_12_cancel"
                style="@style/style_button_text"
                android:layout_width="138dp"
                android:layout_height="54dp"
                android:background="@drawable/selector_btn_aw_large_7_patch"
                android:text="@string/s_btn_cancel" />
            <!-- 확인 -->

            <Button
                android:id="@+id/btn_aw_12_reg"
                style="@style/style_button_text"
                android:layout_width="138dp"
                android:layout_height="54dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_btn_aw_large_7_patch"
                android:text="@string/s_btn_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>